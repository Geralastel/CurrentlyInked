<Window x:Class="CurrentlyInked.InputPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrentlyInked"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Enter Value" Height="125" Width="300">
    <Grid>
        <Button Content="Done" HorizontalAlignment="Left" Margin="198,58,0,0" VerticalAlignment="Top" Width="76" Click="ButtonClick_Done"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="24,58,0,0" Click="ButtonClick_Cancel"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="24,16,0,0" TextWrapping="Wrap" Text="Please enter value." GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" VerticalAlignment="Top" Width="250" Name="Value"/>

    </Grid>
</Window>
